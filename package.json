{
	"name": "@vahor/n8n-kit-workspace",
	"version": "0.0.0",
	"workspaces": {
		"packages": [
			"packages/*",
			"examples/*"
		],
		"catalog": {
			"tsdown": "^0.15.4",
			"typescript": "^5.9.2",
			"arktype": "^2.1.22",
			"nano-spawn": "^1.0.3",
			"chalk": "^5.6.2"
		}
	},
	"description": "Build n8n workflows using code",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Vahor/n8n-kit.git"
	},
	"private": true,
	"author": {
		"email": "me@vahor.fr"
	},
	"keywords": [
		"n8n",
		"builder",
		"workflow",
		"automation"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"@changesets/changelog-github": "^0.5.1",
		"@changesets/cli": "^2.29.7",
		"@types/bun": "1.2.22",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.3",
		"pkg-pr-new": "^0.0.60",
		"typedoc": "^0.28.14",
		"typedoc-theme-oxide": "^0.2.0"
	},
	"scripts": {
		"build": "bun run --filter '*' build",
		"dev": "bun run --filter '*' dev",
		"format": "bunx @biomejs/biome check ./ --write",
		"typecheck": "bun run --filter '*' typecheck",
		"docs": "bunx typedoc",
		"docs:watch": "bunx typedoc --watch",
		"ci:version": "bunx @changesets/cli version && bun update",
		"ci:publish": "for dir in packages/*; do (cd \"$dir\" && bun run build && bun publish || true); done && changeset tag"
	},
	"engines": {
		"bun": ">=1.2.20"
	},
	"lint-staged": {
		"!(**/generated/**)": [
			"biome check --no-errors-on-unmatched --files-ignore-unknown=true"
		]
	}
}
