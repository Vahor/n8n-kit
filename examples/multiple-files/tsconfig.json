{
	"$schema": "https://json.schemastore.org/tsconfig",
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "ESNext",
		"moduleDetection": "force",
		"allowJs": true,

		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["./**/*.ts"]
}
